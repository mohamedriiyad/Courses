@model Courses.Models.Department

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}


<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-pen icon-gradient bg-happy-itmeo">
                </i>
            </div>
            <div>
                Edit
                <div class="page-title-subheading">

                </div>
            </div>
        </div>
        <div class="page-title-actions">

            <div class="d-inline-block">
                <p>
                    <a asp-controller="Departments" asp-action="Index" class="btn btn-primary">Back to List</a>
                </p>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-6" style="margin: 6px auto;">

        <div class="card">
            <div class="body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div style="margin-top:50px" class="form-group">
                        <div class="col-md-12">
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <select asp-for="UniversityId" class="form-control" asp-items="ViewBag.UniversityId">
                                <option value="0">-- Please Select It's University --</option>
                            </select>
                            <span asp-validation-for="UniversityId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input style="margin: 10px auto; display: block;" type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
