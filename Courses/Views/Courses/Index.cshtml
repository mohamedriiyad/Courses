@model IEnumerable<Courses.Models.PrerequisitesCourse>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Code)*@ Course Code
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Grade)*@ Course Grade
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@ Course Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Credit)*@ Course Credit
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Department.Name)*@ Department Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.PreCourse.Name)*@ Prerequest Course
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Credit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Department.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreCourse.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Course.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Course.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Course.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
